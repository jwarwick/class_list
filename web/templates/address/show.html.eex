<h2>Show address</h2>

<ul>

  <li>
    <strong>Address1:</strong>
    <%= @address.address1 %>
  </li>

  <li>
    <strong>Address2:</strong>
    <%= @address.address2 %>
  </li>

  <li>
    <strong>City:</strong>
    <%= @address.city %>
  </li>

  <li>
    <strong>State:</strong>
    <%= @address.state %>
  </li>

  <li>
    <strong>Zip:</strong>
    <%= @address.zip %>
  </li>

  <li>
    <strong>Phone:</strong>
    <%= @address.phone %>
  </li>

  <li>
    <strong>Parents:</strong>
    <ul>
      <%= for parent <- @address.parents do %>
        <li>
          <%= link "#{parent.last_name}, #{parent.first_name}", to: parent_path(@conn, :show, parent) %>
        </li>
      <% end %>
    </ul>
  </li>

</ul>

<%= link "Edit", to: address_path(@conn, :edit, @address), class: "btn btn-default btn-xs" %>
<%= link "Delete", to: address_path(@conn, :delete, @address), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
<%= link "Back", to: address_path(@conn, :index), class: "btn btn-default btn-xs" %>
